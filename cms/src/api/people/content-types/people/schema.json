{
    "kind": "collectionType",
    "collectionName": "peoples",
    "info": {
        "singularName": "people",
        "pluralName": "peoples",
        "displayName": "People",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "image": {
            "type": "component",
            "repeatable": false,
            "component": "common.media-img"
        },
        "description": {
            "type": "richtext"
        },
        "role": {
            "type": "customField",
            "options": [
                "Management:management",
                "Board of directors:directors",
                "CSR Committee:committee"
            ],
            "customField": "plugin::multi-select.multi-select"
        },
        "cta": {
            "type": "component",
            "repeatable": false,
            "component": "common.cta"
        },
        "linkedIn": {
            "type": "string"
        },
        "designation": {
            "type": "component",
            "repeatable": true,
            "component": "corp-subcomponent.people-designation",
            "min": 1,
            "max": 3,
            "required": true
        },
        "qualifications": {
            "type": "string"
        },
        "experience": {
            "type": "string"
        },
        "quote": {
            "type": "text"
        },
        "awards": {
            "type": "component",
            "repeatable": true,
            "component": "corp-subcomponent.awards"
        }
    }
}
